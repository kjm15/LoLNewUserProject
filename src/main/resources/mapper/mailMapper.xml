<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.projectFinal.dao.NoteDao">

	<insert id="mailsend">
		insert into
		NoteTableT(userId,recv_userId,send_userId,n_title,n_message)
		values(#{userId},#{recv_userId},#{send_userId},#{n_title},#{n_message})
	</insert>

	<select id="NoteInfo">
		select * from NoteTableT where #{userId} = send_userId order by n_num DESC limit 10;
	</select>

	<delete id="DeleteNote">
		delete from NoteTableT where n_num = #{n_num}
	</delete>

	<select id="findId">
		select count(*) from NoteTableT 
		FULL join memberT where memberT.userId = #{send_userId};
	</select>
	

	
</mapper>